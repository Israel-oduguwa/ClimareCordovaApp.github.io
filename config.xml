<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Climare</name>

  <description>
     Climare is a software tool for checking the current weather condition and weather forecast
  </description>

  <author href="https://build.phonegap.com" email="support@phonegap.com">
    Israel Oduguwa
  </author>
  <icon src="snowflake.png"/>
<platform name="android" >
</platform>
<preference name="phonegap-version" value="cli-9.0.0" />
<preference name="StatusBarBackgroundColor" value="#000f03" />

<preference name="android-minSdkVersion" value="19" />
<preference name="android-build-tool" value="gradle" />
<plugin name="cordova-plugin-geolocation" source="npm"/>
<plugin name="cordova-plugin-globalization" source="npm"/>
<plugin name="cordova-plugin-network-information" source="npm"/>
<plugin name="cordova-plugin-whitelist" source="npm"/>
<plugin name="cordova-plugin-device-orientation" source="npm"/>
<plugin name="cordova-plugin-device-orientation" source="npm"/>
<plugin name="cordova-plugin-statusbar" source="npm"/>
<gap:plugin name="pushbots-cordova-plugin" spec="1.6.14" source="npm" />

 <access origin="*" />
 <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>